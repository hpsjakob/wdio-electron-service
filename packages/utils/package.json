{
  "name": "@repo/utils",
  "version": "1.0.0",
  "description": "Utilities for WebdriverIO Electron Service",
  "private": true,
  "module": "dist/index.js",
  "main": "dist/cjs/index.js",
  "type": "module",
  "exports": {
    ".": [
      {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "require": "./dist/cjs/index.js"
      },
      "./dist/cjs/index.js"
    ]
  },
  "typeScriptVersion": "5.2.2",
  "engines": {
    "node": "^16.13 || >=18 || >=20"
  },
  "scripts": {
    "clean": "pnpm clean:dist && shx rm -rf ./node_modules pnpm-lock.yaml ./src/cjs/*.ts",
    "clean:dist": "shx rm -rf ./dist",
    "build": "pnpm build:esm && pnpm build:cjs",
    "build:esm": "tsc --outDir dist",
    "build:cjs": "pnpm build:cjs:copy && pnpm build:cjs:compile",
    "build:cjs:compile": "tsc --build tsconfig.cjs.json",
    "build:cjs:copy": "shx cp -f ./src/*.ts ./src/cjs",
    "test:unit": "vitest --coverage --watch=false",
    "test:dev": "vitest --coverage",
    "test": "pnpm test:unit"
  },
  "dependencies": {
    "@electron/packager": "^18.3.2",
    "@repo/constants": "workspace:*",
    "@wdio/logger": "^8.16.17",
    "debug": "^4.3.4",
    "read-package-up": "^11.0.0"
  },
  "devDependencies": {
    "@repo/types": "workspace:*",
    "@types/debug": "^4.1.10",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "jsdom": "^24.0.0",
    "rimraf": "^5.0.5",
    "shx": "^0.3.4",
    "typescript": "^5.3.2",
    "vitest": "^1.2.0"
  },
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
