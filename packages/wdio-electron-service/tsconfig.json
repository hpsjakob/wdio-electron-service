    "src/**/*.ts",
    "src/cjs/preload.mts",
    "src/cjs/main.mts",
    "src/cjs/classes.mts",
    "src/cjs/session.mts",
    "src/cjs/index.mts"
  ],
  "exclude": ["src/cjs", "node_modules", "coverage", "dist", "test"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "noEmit": false,
    "types": ["node", "electron-to-chromium"],
    "typeRoots": ["./node_modules", "./node_modules/@types", "../../@types"]
  }
}
