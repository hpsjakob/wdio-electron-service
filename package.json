{
  "name": "wdio-electron-service-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^16.13 || >=18 || >=20"
  },
  "scripts": {
    "build:builder": "lerna run build --scope=example-builder*",
    "build:forge": "lerna run pack && lerna run init:forge-esm && lerna run init:forge-cjs && lerna run build --scope=example-forge*",
    "ci": "pnpm init-repo && pnpm ci:builder && pnpm ci:forge && pnpm lint && pnpm format:check",
    "ci:forge": "pnpm build:forge && pnpm test:integration:forge-cjs && pnpm test:integration:forge-esm",
    "ci:builder": "pnpm build:builder && pnpm test:integration:builder-cjs && pnpm test:integration:builder-esm",
    "ci:mac-universal": "lerna run build:mac-universal && pnpm test:integration:builder-cjs && pnpm test:integration:builder-esm",
    "clean": "lerna run clean && pnpm dlx rimraf node_modules || pnpm dlx rimraf node_modules",
    "init-repo": "pnpm i --filter=!\"fixture-*\" --filter=!\"*forge*\"",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint \"**/*.{j,mj,cj,t}s\"",
    "lint:fix": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint \"**/*.{j,mj,cj,t}s\" --fix",
    "format": "prettier --write \"**/*.{j,t}s\" \"**/*.{yml,md,json}\"",
    "format:check": "prettier --check \"**/*.{j,t}s\" \"**/*.{yml,md,json}\"",
    "prepare": "husky",
    "test:unit": "lerna run test:unit --scope=wdio-electron-service",
    "test:unit:dev": "lerna run test:unit:dev --scope=wdio-electron-service",
    "test": "pnpm test:integration && pnpm test:unit",
    "test:integration": "pnpm test:integration:forge-esm && pnpm test:integration:forge-cjs && pnpm test:integration:builder-esm && pnpm test:integration:builder-cjs",
    "test:integration-local": "cross-env DEBUG=wdio-electron-service pnpm clean && pnpm i && pnpm build && pnpm test:integration",
    "test:integration:builder-cjs": "cross-env EXAMPLE_DIR=builder-cjs pnpm test:integration:exec",
    "test:integration:builder-esm": "cross-env EXAMPLE_DIR=builder-esm pnpm test:integration:exec",
    "test:integration:forge-cjs": "cross-env EXAMPLE_DIR=forge-cjs pnpm test:integration:exec",
    "test:integration:forge-esm": "cross-env EXAMPLE_DIR=forge-esm pnpm test:integration:exec",
    "test:integration:exec": "cross-env DEBUG=wdio-electron-service lerna run exec --scope=e2e",
    "update:all": "pnpm --filter=\\!fixture-\\* --filter=\\!{example*/out/**/*} up -iL",
    "watch": "lerna run build --scope=wdio-electron-service --watch"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/eslint-config-prettier": "^6.11.2",
    "@types/node": "^20.11.0",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vitest": "^0.5.3",
    "eslint-plugin-wdio": "^8.20.0",
    "globals": "^15.0.0",
    "husky": "^9.0.10",
    "jsdom": "^24.0.0",
    "lerna": "^8.1.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.2.2",
    "read-package-up": "^11.0.0",
    "rimraf": "^5.0.5",
    "shelljs": "^0.8.5"
  },
  "lint-staged": {
    "**/*.{yml,json,md,ts,js}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.3.0+sha256.e1f9e8d1a16607a46dd3c158b5f7a7dc7945501d1c6222d454d63d033d1d918f"
}
