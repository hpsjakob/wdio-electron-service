{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "//#format:check": {},
    "//#init-yarn-package-for-forge": {},
    "//#lint": {},
    "@repo/types#build": {},
    "@repo/utils#build": {
      "dependsOn": ["@repo/types#build"]
    },
    "build": {
      "dependsOn": ["^build", "init"]
    },
    "build:mac-universal": {},
    "clean": {
      "cache": false
    },
    "clean:dist": {
      "cache": false
    },
    "clean:package": {
      "cache": false
    },
    "example-forge-esm#init": {
      "dependsOn": ["test:e2e:forge-cjs"]
    },
    "example-forge-cjs#build": {
      "dependsOn": ["^build", "example-forge-cjs#init"],
      "outputs": ["out/**"]
    },
    "example-forge-esm#build": {
      "dependsOn": ["^build", "example-forge-esm#init"],
      "outputs": ["out/**"]
    },
    "example-builder-cjs#build": {
      "dependsOn": ["^build", "test:e2e:forge-esm"],
      "outputs": ["dist/**"]
    },
    "example-builder-esm#build": {
      "dependsOn": ["^build", "test:e2e:builder-cjs"],
      "outputs": ["dist/**"]
    },
    "example-forge-cjs#build:mac-universal": {
      "dependsOn": ["example-forge-esm#build:mac-universal"],
      "outputs": ["out/**"]
    },
    "example-forge-esm#build:mac-universal": {
      "outputs": ["out/**"]
    },
    "example-builder-cjs#build:mac-universal": {
      "dependsOn": ["example-builder-esm#build:mac-universal"],
      "outputs": ["dist/**"]
    },
    "example-builder-esm#build:mac-universal": {
      "outputs": ["dist/**"]
    },
    "init": {
      "dependsOn": ["^build", "//#init-yarn-package-for-forge", "wdio-electron-service#test:unit"]
    },
    "init-yarn-package-for-forge": {
      "dependsOn": ["build"]
    },
    "release": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {},
    "test:dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "test:e2e:forge-cjs": {
      "dependsOn": ["example-forge-cjs#build", "wdio-electron-service#build"]
    },
    "test:e2e:forge-esm": {
      "dependsOn": ["example-forge-esm#build", "wdio-electron-service#build", "test:e2e:forge-cjs"]
    },
    "test:e2e:builder-cjs": {
      "dependsOn": ["example-builder-cjs#build", "wdio-electron-service#build", "test:e2e:forge-esm"]
    },
    "test:e2e:builder-esm": {
      "dependsOn": ["example-builder-esm#build", "wdio-electron-service#build", "test:e2e:builder-cjs"]
    },
    "test:unit": {
      "dependsOn": ["^build"]
    },
    "wdio-electron-service#build": {
      "dependsOn": ["@repo/utils#build"]
    }
  }
}
